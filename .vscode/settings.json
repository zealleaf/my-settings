{
  "workbench.colorTheme": "Vim Dark Soft",
  // "workbench.editor.tabCloseButton": "left",
  // "workbench.editor.highlightModifiedTabs": true,
  "editor.fontFamily": "'Fira Code','Input Mono'",
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // "editor.formatOnSave": true,
  // "editor.lineNumbers": "interval",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "explorer.confirmDelete": false,
  "terminal.integrated.fontSize": 12,
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.hidesExplorerArrows": true,
  "editor.fontSize": 14,

  // errorLens
  "errorLens.enabledDiagnosticLevels": ["error"], // "info", "hint", "warn"
  "errorLens.excludeBySource": ["cSpell", "eslint", "stylelint"], //

  "[markdown]": {
    "editor.quickSuggestions": {
      "other": "on",
      "comments": "off",
      "strings": "off"
    }
  },
  "jestrunner.codeLens": ["run", "debug", "watch"],
  "jestrunner.disableCodeLens": true,

  // vim
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["<C-j>"],
      "after": ["<esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    { "before": ["<C-j>"], "after": ["<esc>"] },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["J"],
      "after": ["5", "j"]
    },
    {
      "before": ["K"],
      "after": ["5", "k"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["J"],
      "after": ["5", "j"]
    },
    {
      "before": ["K"],
      "after": ["5", "k"]
    },
    {
      "before": ["g", "j"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<Esc>"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["lineBreakInsert"],
      "silent": true
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.files.save"]
    }
  ],
  "vim.leader": "<space>",
  "liveServer.settings.donotShowInfoMsg": true
}
